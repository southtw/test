local Players = game:GetService("Players")
local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoidRootPart = character:WaitForChild("HumanoidRootPart")
local tpenabled = false
local tpdelay = 0.1
local enabled = false
local fireInterval = 0.1

local potionPaths = {
    "Speed Of Lighting",
    "Small Haste Potion",
    "Small Luck Potion",
    "Big Haste Potion",
    "Big Luck Potion",
    "Luck Of Greed ",
    "Pot Of Greed"
}

local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()

local Window = Library.CreateLib("Anime huzz rng", "DarkTheme")

local MainTab = Window:NewTab("Main")
local MainSection = MainTab:NewSection("Automation")

local function fireProximityPrompts()
    while enabled do
        for _, potionName in ipairs(potionPaths) do
            if not enabled then break end
            
            local potion = workspace:FindFirstChild(potionName)
            if potion then
                local main = potion:FindFirstChild("Main")
                if main then
                    local proximityPrompt = main:FindFirstChild("ProximityPrompt")
                    if proximityPrompt and proximityPrompt:IsA("ProximityPrompt") then
                        pcall(function()
                            fireproximityprompt(proximityPrompt)
                        end)
                    end
                end
            end
        end
        task.wait(fireInterval)
    end
end

MainSection:NewToggle("Collect Potions", "Automatically collects all potions", function(state)
    enabled = state
    
    if enabled then
        task.spawn(fireProximityPrompts)
    else
    end
end)

local function atp()
    while tpenabled do
        local success, err = pcall(function()
            local target = workspace.s.Part36
            local proximityPrompt = target.ProximityPrompt
            
            if target and proximityPrompt then

                humanoidRootPart.CFrame = target.CFrame

                task.wait(0.05)

                fireproximityprompt(proximityPrompt)

                task.wait(farmDelay)
            end
        end)
        
        if not success then
            task.wait(1)
        end
    end
end

MainSection:NewToggle("Orb Luck", "Automatically orb luck", function(state)
    tpenabled = state
    
    if tpenabled then
        spawn(atp)
    else
    end
end)

local SettingsTab = Window:NewTab("Settings")
local SettingsSection = SettingsTab:NewSection("Configuration")

SettingsSection:NewSlider("Collection Speed", "Adjust delay between collections", 1, 0.01, function(value)
    fireInterval = value
end)

SettingsSection:NewSlider("TP Delay", "Adjust delay between tp cycles", 1, 0.1, function(value)
    farmDelay = value / 10
end)
